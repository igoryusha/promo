# editorconfig.org
root = true

[*.*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{conf}]
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{css,scss,sass}]
indent_style = space
indent_size = 2

[*.svg]
indent_style = space
indent_size = 2
